# VEIL VPS Node environment template

VEIL_VPS_STATE_PATH=/opt/veil-vps-node/data/node_state.cbor
VEIL_VPS_NODE_KEY_PATH=/opt/veil-vps-node/data/node_identity.key
VEIL_VPS_QUIC_CERT_PATH=/opt/veil-vps-node/data/quic_cert.der
VEIL_VPS_QUIC_KEY_PATH=/opt/veil-vps-node/data/quic_key.der
VEIL_VPS_QUIC_BIND=0.0.0.0:5000
# VEIL_VPS_QUIC_ALPN=veil-quic/1,veil/1,veil-node,veil,h3,hq-29

# Comma-separated QUIC peers (host:port)
VEIL_VPS_FAST_PEERS=10.0.0.2:5000,10.0.0.3:5000
# Comma-separated core tag hex values (64 hex chars each)
# Defaults match the Android app: Public Square, Local Builders, Civic Updates, Open Media
VEIL_VPS_CORE_TAGS=6914e6d3b151b9ac372db7c201ae4e043af645245ecce6175648d42b6177a9ca,7f3612b9145b9ae924e119dbce48ea5bba8ef366d50f10fdf490fc88378c7180,040257d0dadd0ec43e267cc60c2a3c4306e1665273e0ba88065254bbd082a590,7f3fccfbad7a618eecccf31277a79691c5d6a657e50f45dd671319f84ee1d010
VEIL_VPS_PEER_DB_PATH=/opt/veil-vps-node/data/peers.db
VEIL_VPS_MAX_DYNAMIC_PEERS=512

# Optional trusted cert DERs
# VEIL_VPS_QUIC_TRUSTED_CERTS=/opt/veil-vps-node/data/peer1.der,/opt/veil-vps-node/data/peer2.der

# Optional WebSocket fallback lane
# VEIL_VPS_WS_URL=ws://relay.example:8080
# VEIL_VPS_WS_PEER=relay-ws
VEIL_VPS_WS_LISTEN=127.0.0.1:8080

# Optional Tor SOCKS5 fallback lane
# VEIL_VPS_TOR_SOCKS_ADDR=127.0.0.1:9050
# VEIL_VPS_TOR_PEERS=peer.onion:5000

# Optional BLE fallback lane (requires feature ble-btleplug)
# VEIL_VPS_BLE_ENABLE=0
# VEIL_VPS_BLE_PEERS=ble-peer-1,ble-peer-2
# VEIL_VPS_BLE_ALLOWLIST=AA:BB:CC:DD:EE:FF
# VEIL_VPS_BLE_MTU=180

# Policy knobs
VEIL_VPS_MAX_CACHE_SHARDS=200000
VEIL_VPS_BUCKET_JITTER=0
VEIL_VPS_REQUIRED_SIGNED_NAMESPACES=
VEIL_VPS_ADAPTIVE_LANE_SCORING=1

# Runtime loop
VEIL_VPS_SNAPSHOT_SECS=60
VEIL_VPS_TICK_MS=50
VEIL_VPS_HEALTH_BIND=127.0.0.1
VEIL_VPS_HEALTH_PORT=9090
# /metrics is served on the same port
PROXY_HEALTH_USER=veil-health
PROXY_HEALTH_PASS=change-me
