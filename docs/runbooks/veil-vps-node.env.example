# VEIL VPS Node environment template

VEIL_VPS_STATE_PATH=/opt/veil-vps-node/data/node_state.cbor
VEIL_VPS_NODE_KEY_PATH=/opt/veil-vps-node/data/node_identity.key
VEIL_VPS_QUIC_CERT_PATH=/opt/veil-vps-node/data/quic_cert.der
VEIL_VPS_QUIC_KEY_PATH=/opt/veil-vps-node/data/quic_key.der
VEIL_VPS_QUIC_BIND=0.0.0.0:5000

# Comma-separated QUIC peers (host:port)
VEIL_VPS_FAST_PEERS=10.0.0.2:5000,10.0.0.3:5000

# Optional trusted cert DERs
# VEIL_VPS_QUIC_TRUSTED_CERTS=/opt/veil-vps-node/data/peer1.der,/opt/veil-vps-node/data/peer2.der

# Optional WebSocket fallback lane
# VEIL_VPS_WS_URL=ws://relay.example:8080
# VEIL_VPS_WS_PEER=relay-ws

# Optional Tor SOCKS5 fallback lane
# VEIL_VPS_TOR_SOCKS_ADDR=127.0.0.1:9050
# VEIL_VPS_TOR_PEERS=peer.onion:5000

# Policy knobs
VEIL_VPS_MAX_CACHE_SHARDS=200000
VEIL_VPS_BUCKET_JITTER=0
VEIL_VPS_REQUIRED_SIGNED_NAMESPACES=
VEIL_VPS_ADAPTIVE_LANE_SCORING=1

# Runtime loop
VEIL_VPS_SNAPSHOT_SECS=60
VEIL_VPS_TICK_MS=50
