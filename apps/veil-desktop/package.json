{
  "name": "veil-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "VEIL desktop example app (Electron + React)",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "package": "vite build && node scripts/postpack.js && electron-builder --linux",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "@veil/sdk-js": "file:../../packages/veil-sdk-js",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.veil.desktop",
    "productName": "VEIL Desktop",
    "files": [
      "dist/**",
      "dist/relay/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network"
    }
  }
}
