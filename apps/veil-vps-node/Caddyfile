:80 {
    root * /srv

    handle_path /ws* {
        reverse_proxy veil-vps-node:8080
    }

    handle_path /health* {
        reverse_proxy veil-vps-node:8080
    }

    handle_path /metrics* {
        reverse_proxy veil-vps-node:8080
    }

    handle_path /peers* {
        reverse_proxy veil-vps-node:8080
    }

    handle /admin-api* {
        reverse_proxy veil-vps-node:8080
    }

    handle {
        file_server
    }
}
